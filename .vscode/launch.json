{
    "configurations": [

        {
            "name": "Python Debugger: Inspect",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/inspect_weave_venv/bin/inspect", // Replace inspect_weave_venv with your venv
            "console": "integratedTerminal",
            "args": [ // add whatever args you want to pass to inspect
                "eval",
                "hellaswag.py",
                "--limit",
                "5"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "INSPECT_WANDB_WEAVE_AUTOPATCH": "true"
            }
        },
        {
            "name": "Python Debugger: Run Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        }
    ]
}